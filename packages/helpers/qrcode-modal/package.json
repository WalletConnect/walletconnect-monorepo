    "@babel/preset-typescript": "7.8.3",
    "@babel/register": "7.8.3",
    "@types/jest": "22.2.3",
    "@types/node": "12.12.14",
    "@types/qr-image": "3.2.1",
    "css-loader": "3.5.3",
    "microbundle": "0.11.0",
    "npm-run-all": "4.1.5",
    "style-loader": "1.2.0",
    "svg-url-loader": "5.0.0",
    "ts-loader": "6.2.2",
    "tsdx": "0.12.3",

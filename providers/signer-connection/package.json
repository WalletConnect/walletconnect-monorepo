{
  "name": "@walletconnect/signer-connection",
  "description": "Signer Connection for WalletConnect Protocol",
  "version": "2.0.0-beta.101",
  "author": "WalletConnect, Inc. <walletconnect.com>",
  "homepage": "https://github.com/walletconnect/walletconnect-monorepo/",
  "license": "Apache-2.0",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "unpkg": "dist/index.umd.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "wallet",
    "walletconnect"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "help": "tsc --help",
    "build:pre": "run-s clean",
    "build:types": "tsc",
    "build:source": "rollup --config rollup.config.js",
    "build": "run-s build:pre build:source build:types",
    "test:pre": "rm -rf ./test/test.db",
    "test:run": "vitest run --dir test",
    "test": "run-s test:pre test:run",
    "lint": "eslint -c '../../.eslintrc' --fix './src/**/*.ts'"
  },
  "dependencies": {
    "@walletconnect/jsonrpc-types": "1.0.1",
    "@walletconnect/jsonrpc-utils": "1.0.3",
    "@walletconnect/sign-client": "^2.0.0-beta.101",
    "@walletconnect/types": "^2.0.0-beta.101",
    "@walletconnect/utils": "^2.0.0-beta.101"
  }
}
